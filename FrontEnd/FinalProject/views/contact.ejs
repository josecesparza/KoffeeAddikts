<% include ./partials/header %>
<% include ./partials/navbar %>

<link rel="stylesheet" type="text/css" href="/css/contact.css">

<body>
    <div class="background">
        <div class="container">
            <div class="screen">
                <div class="screen-header">
                    <div class="screen-header-left">
                        <div class="screen-header-button close"></div>
                        <div class="screen-header-button maximize"></div>
                        <div class="screen-header-button minimize"></div>
                    </div>
                    <div class="screen-header-right">
                        <div class="screen-header-ellipsis"></div>
                        <div class="screen-header-ellipsis"></div>
                        <div class="screen-header-ellipsis"></div>
                    </div>
                </div>
                <div class="screen-body">
                    <div class="screen-body-item left">
                        <div class="app-title">
                            <span>CONTACT US</span>
                        </div>
                        <div class="app-contact">CONTACT INFO : +XX XX 31 28 95</div>
                    </div>
                    <div class="screen-body-item">
                        <form class="app-form" action="/contact" method="POST">
                            <div class="app-form-group">
                                <input class="app-form-control" placeholder="NAME" disabled
                                    value="<%= currentUser.username %>">
                            </div>
                            <div class="app-form-group">
                                <input class="app-form-control" name="email" placeholder="EMAIL"
                                    value="<%= currentUser.email %>" readonly>
                            </div>
                            <div class="app-form-group">
                                <input class="app-form-control" name="subject" placeholder="SUBJECT" required>
                            </div>
                            <div class="app-form-group message">
                                <input class="app-form-control" name="content" placeholder="MESSAGE" required>
                            </div>
                            <div class="app-form-group buttons">
                                <button class="app-form-button">CANCEL</button>
                                <input class="app-form-button" type="submit" value="SEND">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>