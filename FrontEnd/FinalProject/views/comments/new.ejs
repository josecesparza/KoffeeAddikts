<% include ../partials/header %>

<h1 style="text-align: center">Add a New Comment to <%= note.title%></h1>
<div style="width: 30%; margin: 25px auto;">
    <form action="/notes/<%= note._id %>/comments" method="POST">
        <div>
            <input type="text" name="comment[text]" placeholder="text">
        </div>

        <div>
            <button>Submit!</button>
        </div>

    </form>

    <a href="/note/<%= note._id %>">Go Back</a>
</div>

<% include ../partials/footer %>