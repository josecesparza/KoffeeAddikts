<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <h1>Edit Koffee</h1>

    <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
        <div class="flexbox">
            <input type="text" name="note[name]" value="<%= note.name %>" placeholder="name" required>
            <input type="text" name="note[kind]" value="<%= note.kind %>" placeholder="kind of koffee" required>
        </div>

        <div class="flexbox">
            <textarea name="note[content]" placeholder="content" cols="30" rows="10"
                required><%= note.content %></textarea>
        </div>

        <div class="flexbox" id="price">
            <input type="text" name="note[price]" value="<%= note.price %>" placeholder="DKK price" required>
        </div>

        <div class="flexbox">
            <label for="coordinates">Where can we find your coffee?</label>
        </div>

        <div class="flexbox" id="coordinates">
            <input type="text" name="note[location.lat]" value="<%= note.location.lat %>" placeholder="latitude" required>
            <input type="text" name="note[location.lng]" value="<%= note.location.lng %>" placeholder="longitude" required>
        </div>

        <div class="flexbox">
            <label for="public">Make this Koffee public:</label>
            <% if(note.public){ %>
            <input type="checkbox" name="note[public]" id="public" checked><br>
            <% } else{ %>
            <input type="checkbox" name="note[public]" id="public"><br>
            <% } %>
        </div>

        <div class="flexbox">
            <button>Submit!</button>
        </div>
    </form>

</div>

<% include ../partials/footer %>