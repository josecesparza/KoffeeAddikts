<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <h1>Create a New Koffee</h1>
    <form action="/notes/new" method="POST" enctype="multipart/form-data">
        <div class="flexbox">
            <input type="text" name="note[name]" placeholder="name" required>
            <input type="text" name="note[kind]" placeholder="kind of koffee" required>
        </div>

        <div class="flexbox">
            <textarea name="note[content]" placeholder="content" cols="30" rows="10" required></textarea>
        </div>
        <div class="flexbox" id="price">
            <input type="number" name="note[price]" placeholder="DKK price" required>
        </div>
        <div class="flexbox">
            <label for="coordinates">Where can we find your coffee?</label>
        </div>
        <div class="flexbox" id="coordinates">
            <input type="text" name="note[lat]" placeholder="latitude" required>
            <input type="text" name="note[lng]" placeholder="longitude" required>
        </div>

        <div class="flexbox">
            <label for="public">Make this Koffee public:</label>
            <input type="checkbox" name="note[public]" id="public"><br>
        </div>

        <div class="flexbox">
            <label for="file">Choose Koffee Image:</label>
            <input type="file" name="file" id="file" accept="image/*" required>
        </div>

        <div class="flexbox">
            <button>Submit!</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>